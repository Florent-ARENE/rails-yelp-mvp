<div class="container">
  <div class="row justify-content-center">
    <h1>New rating for <%= @restaurant.name %></h1>
    <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content %>
      <%= f.input :rating, collection: Review::RATING %>
      <%= f.submit "Submit review" %>
    <% end %>
    <%= link_to '<i class="fa-solid fa-angles-left"></i>'.html_safe, restaurant_path(@restaurant) %>
  </div>
</div>
